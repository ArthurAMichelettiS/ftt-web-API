    <script>
      const request = new XMLHttpRequest();
      request.open("GET", "/ftt-WEB-api/user");

      request.onload = function () {

          console.log("javascript algum faz sentido???");
        const response = JSON.parse(this.responseText);
        console.log(JSON.parse(this.responseText));
        console.log("javascript algum faz sentido???");
        const table = document.querySelector(".table-body");
        for(let line of response){
          var row = document.createElement("tr");
          var id = document.createElement("td");
          id.innerHTML = line.id;
          row.appendChild(id);
          var name = document.createElement("td");
          name.innerHTML = line.name;
          row.appendChild(name);
          var email = document.createElement("td");
          email.innerHTML = line.email;
          row.appendChild(email);
          var color = document.createElement("td");
          color.innerHTML = line.color;
          row.appendChild(color);
          table.appendChild(row);
        }
        console.log(table)
      };

      request.onerror = function () {
        console.log("erro ao executar a requisição");
      };

      request.send();
    </script>
